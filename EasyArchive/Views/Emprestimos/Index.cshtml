@model IEnumerable<EasyArchive.Models.Emprestimo>

@{
    ViewData["Title"] = "Index";
}

<h1>Empréstimos</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEmprestimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDevolucao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.Curso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Livro.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEmprestimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDevolucao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmprestimoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.EmprestimoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.EmprestimoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
