@using EasyArchive.Models
@{
    ViewData["Title"] = "Página Inicial";
    List<Emprestimo> listaEmp = ViewData["UltimosEmp"] as List<Emprestimo>;
}

<div class="Hero-banner d-flex row text-center align-items-center">
    <div class="text-center text-dark col-6">
        <h1>Easy Archive</h1>
        <p class="fs-4">Feito com o objetivo de facilitar o trabalho de bibliotecários, a Easy Archive ajuda com o controle de livros, alunos e empréstimos.</p>
        <p class="fw-bold fs-5">O site apresenta as seguintes funcionalidades:</p>
        <p class="fs-5"><i class="bi bi-check-lg"></i> Registro simples e rápido de livros, alunos e empréstimos;</p>
        <p class="fs-5"><i class="bi bi-check-lg"></i> Data do empréstimo e de devolução definida automáticamente;</p>
        <p class="fs-5"><i class="bi bi-check-lg"></i> Ferramenta de pesquisa para fácil acesso à determinados itens.</p>
        <a class="text-light btn btn-conf mx-2 fw-bold fs-5" asp-area="Identity" asp-page="/Account/Register">Experimentar</a>
    </div>
    <div class=" col-6">
        <div class="card-custom text-center">
            <div class="card-header fs-3 fw-bold">
                Empréstimos Recentes:
            </div>
            <div class="card-body">
                @if (listaEmp != null)
                {
                    <table class="table table-bordered tabela">
                        <thead>
                            <tr>
                                <td>Nome:</td>
                                <td>Livro:</td>
                                <td>Data de Empréstimo:</td>
                                <td>Data de Devolução:</td>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var emp in listaEmp)
                            {
                                <tr>
                                    <td class="card-text">@emp.Aluno.Nome</td>
                                    <td class="card-text">@emp.Livro.Titulo</td>
                                    <td class="card-text">@emp.DataEmprestimo</td>
                                    <td class="card-text">@emp.DataDevolucao</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
                else
                {
                    <p>Não existem empréstimos.</p>
                }
            </div>
        </div>
    </div>
</div>
<div class="row g-3 mt-4 text-center">
    <!-- Livro -->
    <div class="col-md-4">
        <div class="card-custom p-3 h-100 d-flex flex-column justify-content-between">
            <div>
                <h2><i class="bi bi-book"></i></h2>
                <h5>Livros</h5>
                <p class="small-muted">Gerencie títulos, autores, edições e cópias físicas.</p>
            </div>
            <div class="mt-3 d-flex gap-2">
                <a asp-controller="Livros" asp-action="Index" class="btn btn-outline-secondary flex-fill">Catálogo</a>
                <a asp-controller="Livros" asp-action="Create" class="btn btn-outline-primary flex-fill">Adicionar</a>
            </div>
        </div>
    </div>

    <!-- Aluno / Member -->
    <div class="col-md-4">
        <div class="card-custom p-3 h-100 d-flex flex-column justify-content-between">
            <div>
                <h2><i class="bi bi-person-arms-up"></i></h2>
                <h5>Aluno</h5>
                <p class="small-muted">Cadastre e gerencie os alunos / membros da biblioteca.</p>
            </div>
            <div class="mt-3 d-flex gap-2">
                <a asp-controller="Alunos" asp-action="Index" class="btn btn-outline-secondary flex-fill">Lista</a>
                <a asp-controller="Alunos" asp-action="Create" class="btn btn-outline-primary flex-fill">Novo Aluno</a>
            </div>
        </div>
    </div>

    <!-- Empréstimo -->
    <div class="col-md-4">
        <div class="card-custom p-3 h-100 d-flex flex-column justify-content-between">
            <div>
                <h2><i class="bi bi-clock-history"></i></h2>
                <h5>Empréstimo</h5>
                <p class="small-muted">Registre empréstimos, renovações e devoluções.</p>
            </div>
            <div class="mt-3 d-flex gap-2">
                <a asp-controller="Emprestimos" asp-action="Index" class="btn btn-outline-secondary flex-fill">Histórico</a>
                <a asp-controller="Emprestimos" asp-action="Create" class="btn btn-outline-primary flex-fill">Novo Empréstimo</a>
            </div>
        </div>
    </div>
</div>