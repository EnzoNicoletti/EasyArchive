@page
@model LoginModel

@{
    ViewData["Title"] = "Cadastrar-se";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
        
            <div>

                <h1 class="text-center fw-bold mb-2">@ViewData["Title"]</h1>
                <p class="text-center text-muted mb-4">
                    Use uma conta local para se cadastrar
                </p>

                <form id="account" method="post">

                    <div asp-validation-summary="ModelOnly"
                         class="text-danger text-center mb-3"
                         role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email"
                               class="form-control rounded-3"
                               autocomplete="username"
                               placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password"
                               class="form-control rounded-3"
                               autocomplete="current-password"
                               placeholder="password" />
                        <label asp-for="Input.Password">Senha</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            Lembre-se de mim neste dispositivo
                        </label>
                    </div>

                    <button type="submit"
                            class="btn btn-primary btn-lg w-100 rounded-3">
                        Cadastrar
                    </button>

                    <div class="text-center mt-4">
                        <p class="mb-1">
                            <a asp-page="./ForgotPassword" class="link-primary">
                                Esqueceu sua senha?
                            </a>
                        </p>
                        <p class="mb-1">
                            <a asp-page="./Register"
                               asp-route-returnUrl="@Model.ReturnUrl"
                               class="link-primary">
                                Já tem uma conta? Conecte-se aqui
                            </a>
                        </p>
                        <p class="mb-0">
                            <a asp-page="./ResendEmailConfirmation"
                               class="link-secondary">
                                Reenviar email de confirmação
                            </a>
                        </p>
                    </div>

                </form>

            </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

